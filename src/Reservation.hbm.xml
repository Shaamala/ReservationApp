<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Reservation" table = "reservation">
      
      <meta attribute = "class-description">
         This class contains the reservation detail. 
      </meta>
      
      <id name = "reservationID" type = "int" column = "reservationID">
         <generator class="native"/>
      </id>
      
      <property name = "pickUp" column = "pickUp" type = "string"/>
      <property name = "dropOff" column = "dropOff" type = "string"/>
     
      <many-to-one name = "customers" column = "customerID" unique="true" 
         class="Address" not-null="true"/>
         
   </class>

   <class name = "Customers" table="customers">
      
      <meta attribute = "class-description">
         This class contains the customer detail. 
      </meta>
      
      <id name = "customerID" type = "int" column = "customerID">
         <generator class="native"/>
      </id>
      <property name = "fName" column = "fName" type = "string"/>
      <property name = "lName" column = "lName" type = "string"/>     
      <property name = "street" column = "street" type = "string"/>
      <property name = "city" column = "city" type = "string"/>
      <property name = "state" column = "state" type = "string"/>
      <property name = "zip" column = "zip" type = "string"/>
	  <property name = "homeTel" column = "homeTel" type = "string"/>
      <property name = "emrgTel" column = "emrgTel" type = "string"/>
      <property name = "vetName" column = "vetName" type = "string"/>
	  <property name = "vetTel" column = "vetTel" type = "string"/>
      <property name = "email" column = "email" type = "string"/>
     
      
   </class>

</hibernate-mapping>